! HISTORY

!defaults file for MwmUI2.c

!*************************************!
!Coloring Resources
!*************************************!

! Windows, icons, menus

Mwm*activeBackground : black
Mwm*activeForeground : white
Mwm*activeBottomShadowColor : yellow
Mwm*activeTopShadowColor : purple
Mwm*activeBackgroundPixmap : slant_right


Mwm*background : white
Mwm*foreground : black
Mwm*bottomShadowColor : orange
Mwm*topShadowColor : aquamarine
Mwm*backgroundPixmap : vertical

Mwm*cleanText : False


!*************************************!
! Window Decorations
!*************************************!

Mwm*clientDecoration : all
Mwm*clientFunctions : all


!*************************************!
! Focus Policies
!*************************************!


Mwm*autoKeyFocus : True
Mwm*colormapFocusPolicy : explicit
Mwm*deiconifyKeyFocus : True
Mwm*enforceKeyFocus : True
Mwm*focusAutoRaise :True
Mwm*keyboardFocusPolicy : explicit
Mwm*passButtons :True



!*************************************!
! Controlling Windows
!*************************************!

! bindings

Mwm*buttonBindings : MwmUI2ButtonBindings
Mwm*keyBindings : MwmUI2KeyBindings


! font

Mwm*fontList : 6 x 12



!Window Menus

Mwm*wMenuButtonClick  :True
Mwm*wMenuButtonClick2 :True

!Configuration file

Mwm*configFile : MwmUI2.mwmrc


!*************************************!
!Controlling Window Size and Position
!*************************************!

! Size Resources


Mwm*frameBorderWidth :20
Mwm*limitResize : True
Mwm*TestWindow1.maximumClientSize : 300x300
Mwm*maximumMaximumSize : 1000x1000



! Position Resources

Mwm*clientAutoPlace : False
Mwm*interactivePlacement : True
Mwm*moveThreshold : 100
Mwm*showFeedback : all


!*************************************!
!Configuring icons
!*************************************!


Mwm*iconAutoPlace : True
Mwm*iconPlacement : bottom right
Mwm*iconDecoration :activelabel label image
Mwm*iconClick : True
Mwm*useClientIcon : True
Mwm*TestWindow2*iconImage : ../../Toolkit/bitmaps/smiley.bmp
Mwm*TestWindow2*iconImageForeground : black
Mwm*TestWindow2*iconImageBackground : white
Mwm*TestWindow2*iconImageTopShadowColor : blue
Mwm*TestWindow2*iconImageBottomShadowColor : red
Mwm*TestWindow2*iconImageTopShadowPixmap : slant_left
Mwm*TestWindow2*iconImageBottomShadowPixmap : slant_right



!*************************************!
!Configuring the icon box
!*************************************!

Mwm*useIconBox :False


! End of mwm defaults file








